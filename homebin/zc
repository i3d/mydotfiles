#!/bin/zsh

SPATH=$1
[[ -z $1 ]] && SPATH=$(pwd)
line=$(/bin/ls -a $SPATH | fzf-tmux -d 20% -1 -0 -s -m -print0 --preview 'head -100 {}' | tr '\n' ' ')
[[ -z $line ]] && exit 0
[[ -f $line ]] && less $(echo $line) && exit 0
all=
for file in $(echo "$line"); do
	all=$all" "$SPATH/$file
done
less $(echo "$all")
exit 0
